<!-- make function of lunbo -->
	var index = 0;
	var width = 240;
	document.getElementById('leftbutton').addEventListener('click', function() {
		index = index - 1;
		if (index < 0) {
			index = 0;
		}
		dotransition();
	});
	document.getElementById('rightbutton').addEventListener('click',
			function() {
				index = index + 1;
				if (index > 4) {
					index = 4;
				}
				dotransition();
			});

	function dotransition() {
		document.getElementById('wrap-list').style.cssText = "transform: translate3d(-"
				+ index
				* width
				+ "px, 0, 0);	transition-delay: .3s;transition: ease; transition-duration:0.5s;";

	}
	
	
<!-- fill items -->

	var httpresponse;
	var times;
	
	showwarp("zhuye");
	function showwarp(thislistname) {
		$.post('/getallliebiaobycategory', {
			category : thislistname
		}, function(res) {
			httpresponse = res;
			var innerContext = "";
			var imagestring = "";
			if (res.liebiao.length<8){
				times=res.liebiao.length;
			}else{
				times=8;
			}
			for (var i = 0; i < times; i++) {	
				innerContext= innerContext+ "<div class='showcase'>";
				innerContext= innerContext+ "<div class='zhuyeimageplace' id='image";
				innerContext= innerContext+thislistname;
				innerContext= innerContext+i;
				innerContext= innerContext+"'>";
				innerContext= innerContext+ "</div>";
				innerContext= innerContext+ "<a>";		
				innerContext= innerContext+ res.liebiao[i].oneitem.title;		
				innerContext= innerContext+ "</a>";
				innerContext= innerContext+ "<p>";		
				innerContext= innerContext+ res.liebiao[i].oneitem.description;		
				innerContext= innerContext+ "</p>";
				innerContext= innerContext+ "</div>";			
			}
			document.getElementById("wrap-list").innerHTML = innerContext;
		});
		for (i = 0; i < times; i++) {
			setimage(i,thislistname,httpresponse.liebiao[i].oneitem.imageid);
		}
	}
	
	showlists("xiangmu");
	showlists("kecheng");
	showlists("zuopin");
	
	function showlists(thislistname) {
		$.post('/getallliebiaobycategory', {
			category : thislistname
		}, function(res) {
			httpresponse = res;
			var innerContext = "";
			var imagestring = "";
			if (res.liebiao.length<3){
				times=res.liebiao.length;
			}else{
				times=3;
			}
			for (var i = 0; i < times; i++) {	
				innerContext= innerContext+ "<div class='oneitem'>";
				innerContext= innerContext+ "<div class='imageplace' id='image";
				innerContext= innerContext+thislistname;
				innerContext= innerContext+i;
				innerContext= innerContext+"'>";
				innerContext= innerContext+ "</div>";
				innerContext= innerContext+ "<div class='moveplace'>";
				innerContext= innerContext+ "<div class='showtitle'>";		
				innerContext= innerContext+ res.liebiao[i].oneitem.title;		
				innerContext= innerContext+ "</div>";
				innerContext= innerContext+ "<div class='showdescription'>";		
				innerContext= innerContext+ res.liebiao[i].oneitem.description;		
				innerContext= innerContext+ "</div>";
				innerContext= innerContext+ "</div>";		
				innerContext= innerContext+ "</div>";
			}
			document.getElementById(thislistname).innerHTML = innerContext;
		});
		for (i = 0; i < times; i++) {
			setimage(i,thislistname,httpresponse.liebiao[i].oneitem.imageid);
		}
	}
	
	
	function setimage(i,thislistname,imageid){
		
		$.ajax({
			url : '/getimagebyid',
			type : 'POST',
			data : {imageid:imageid},
			async : true,
			success : function(res) {
				if(res.image!=null){
					var innerContext="";
					var imagestring ='data:image/png;base64,'+ res.image;
					var idname="image";
					idname=idname+thislistname+i;
					innerContext=innerContext+ "<img class='imageview' src=";
					innerContext=innerContext+ imagestring;
					innerContext=innerContext+ " />";
					document.getElementById(idname).innerHTML = innerContext;
				}
			}
		});
	}
	
	
<!-- draw two arrays -->
	function drawLeft() {
		var c = document.getElementById("leftCanvas"), cxt = c.getContext("2d");
		cxt.beginPath();
		cxt.moveTo(8, 2);
		cxt.lineTo(2, 20);
		cxt.lineTo(8, 38);
		cxt.lineWidth = 4;
		cxt.strokeStyle = "black";
		cxt.lineCap = 'round';
		cxt.lineJoin = "round";
		cxt.stroke();
	}
	drawLeft();

