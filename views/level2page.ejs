<script>
	$.ajaxSetup({
		async : false
	});
	document.getElementById('hometag').addEventListener('click', function() {
		window.location.assign('/');
	});
	document.getElementById('abouttag').addEventListener('click', function() {
		window.location.assign('/aboutpage');
	});
	document.getElementById('promotag').addEventListener('click', function() {
		window.location.assign('/level2page/promo');
	});
	document.getElementById('resumetag').addEventListener('click', function() {
		window.location.assign('/resumepage');
	});
	document.getElementById('contacttag').addEventListener('click', function() {
		window.location.assign('/contactpage');
	});


	changedisplaytitletochinese();
	function changedisplaytitletochinese() {
		var value = document.getElementById('realdisplaytitle').innerHTML;
		switch (value) {
		case "xiangmu":
			document.getElementById('realdisplaytitle').innerHTML = "经营项目";
			break;
		case "kecheng":
			document.getElementById('realdisplaytitle').innerHTML = "学员课程";
			break;
		case "zuopin":
			document.getElementById('realdisplaytitle').innerHTML = "作品展示";
			break;
		case "promo":
			document.getElementById('realdisplaytitle').innerHTML = "PROMOTION";
			break;
		default:

		}

	}

	var httpresponse;
	var times;

	showlists(document.getElementById('title').innerHTML);
	function showlists(thislistname) {
		$
				.post(
						'/getallliebiaobycategory',
						{
							category : thislistname
						},
						function(res) {
					
							httpresponse = res;
							var innerContext = "";
							var imagestring = "";
							if (res.liebiao.length < 3) {
								times = res.liebiao.length;
							} else {
								times = 3;
							}
							for (var i = 0; i < times; i++) {
								innerContext = innerContext
										+ "<div class='oneitem'>";

								innerContext = innerContext
										+ "<div class='showtitle'>";
								innerContext = innerContext
										+ res.liebiao[i].oneitem.title;
								innerContext = innerContext + "</div>";
								innerContext = innerContext
										+ "<div class='showdescription'>";
								innerContext = innerContext
										+ res.liebiao[i].oneitem.description;
								innerContext = innerContext + "</div>";
								innerContext = innerContext
										+ "<div class='imageplace' id='image";
				innerContext= innerContext+thislistname;
				innerContext= innerContext+i;
				innerContext= innerContext+"'>";
								innerContext = innerContext + "</div>";
								innerContext = innerContext + "</div>";
							}
							document.getElementById("context").innerHTML = innerContext;
						});
		for (i = 0; i < times; i++) {
			setimage(i, thislistname, httpresponse.liebiao[i].oneitem.imageid);
		}
	}

	function setimage(i, thislistname, imageid) {

		$
				.ajax({
					url : '/getimagebyid',
					type : 'POST',
					data : {
						imageid : imageid
					},
					async : true,
					success : function(res) {
						if (res.image != null) {
							var innerContext = "";
							var imagestring = 'data:image/png;base64,'
									+ res.image;
							var idname = "image";
							idname = idname + thislistname + i;
							innerContext = innerContext
									+ "<img class='imageview' src=";
					innerContext=innerContext+ imagestring;
					innerContext=innerContext+ " />";
							document.getElementById(idname).innerHTML = innerContext;
						}
					}
				});
	}
</script>


